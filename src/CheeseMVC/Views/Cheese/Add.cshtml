@model CheeseMVC.ViewModels.AddCheeseViewModel

@{ ViewBag.title = "New Cheese"; }

<h2>@ViewBag.title</h2>

<form asp-controller="Cheese" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />a
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryID"></label>
        <select asp-for="CategoryID" asp-items="@Model.Categories"></select>
    </div>

    <input type="submit" value="Add Cheese" />

</form>
